if event.type == KEYDOWN and event.key == K_a and event.key == K_LEFT :
  position_perso = perso.get_rect()
  fenetre.blit(perso, position_perso)
  perso.move(-80 , 0)
  
if event.type == KEYDOWN and event.key == K_a and event.key == K_RIGHT :
  position_perso = perso.get_rect()
  fenetre.blit(perso, position_perso)
  perso.move(80 , 0)

if event.type == KEYDOWN and event.key == K_a and event.key == K_UP :
  position_perso = perso.get_rect()
  fenetre.blit(perso, position_perso)
  perso.move(0, 80)
  
if event.type == KEYDOWN and event.key == K_a and event.key == K_DOWN :
  position_perso = perso.get_rect()
  fenetre.blit(perso, position_perso)
  perso.move(0 , -80)

elif position_perso = liste[x] and liste[x] == 0 :
  position_perso == perso.get_rect(80,120)
